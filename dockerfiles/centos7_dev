FROM centos:7

RUN yum update -y && \
        yum install -y epel-release && \
        yum update -y && \
        yum groupinstall -y 'Development Tools' && \
        yum install -y git cmake sudo && \
        yum clean all && rm -rf /var/cache/yum && \
        localedef -c -i en_US -f UTF-8 en_US.UTF-8 
